.Header {
  background: white;
  border-bottom: 1px solid $borderGrey;

  h1 {
    font-weight: 300;
  }
}

.Header-container {
  @extend .Container;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 1rem;
  padding-bottom: 1rem;
}

.Header-title {
  margin-bottom: 0;
}
.Header-logo {
  height: 40px;
  margin-right: 1rem;
}
